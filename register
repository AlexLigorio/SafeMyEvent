<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro - SaveMyEvent</title>
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@400;600&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      font-family: 'Lexend', sans-serif;
      background-color: #F2F2F2;
      color: #333333;
    }
    .error {
      color: red;
      font-size: 0.875rem;
      margin-top: 0.25rem;
    }
    .hidden {
      display: none;
    }
  </style>
</head>

<body>
  <div class="flex flex-col items-center justify-center min-h-screen p-4">
    <h1 class="text-4xl font-semibold mb-8 text-center">Aqu√≠ se salvan eventos, no se cancelan</h1>

    <form id="registerForm" class="w-full max-w-md bg-white p-6 rounded-md shadow-md space-y-4">

      <div>
        <p class="mb-2 font-medium">Selecciona tipo de cuenta</p>
        <div class="flex space-x-4">
          <button type="button" id="btnArtista"
            class="flex-1 border rounded-md py-2 font-semibold bg-[#EEEEEE] text-[#333]">Soy Artista</button>
          <button type="button" id="btnEmpresa"
            class="flex-1 border rounded-md py-2 font-semibold bg-[#EEEEEE] text-[#333]">Soy Empresa</button>
        </div>
        <p id="errorPerfil" class="error hidden">Selecciona un tipo de cuenta</p>
      </div>

      <input type="hidden" name="perfil" id="perfil" />

      <div>
        <input type="text" id="nombre" placeholder="Nombre" class="w-full p-3 rounded-md bg-[#F2F2F2]">
        <p id="errorNombre" class="error hidden">Completa el nombre</p>
      </div>

      <div>
        <input type="email" id="correo" placeholder="Correo electr√≥nico" class="w-full p-3 rounded-md bg-[#F2F2F2]">
        <p id="errorCorreo" class="error hidden">Introduce un correo v√°lido</p>
      </div>

      <div>
        <div class="relative">
          <input type="password" id="contrasena" placeholder="Contrase√±a"
            class="w-full p-3 rounded-md bg-[#F2F2F2]">
          <button type="button" onclick="togglePassword('contrasena')"
            class="absolute right-3 top-3 text-sm">üëÅ</button>
        </div>
        <p id="errorContrasena" class="error hidden">Introduce una contrase√±a</p>
      </div>

      <div>
        <div class="relative">
          <input type="password" id="repetirContrasena" placeholder="Repetir contrase√±a"
            class="w-full p-3 rounded-md bg-[#F2F2F2]">
          <button type="button" onclick="togglePassword('repetirContrasena')"
            class="absolute right-3 top-3 text-sm">üëÅ</button>
        </div>
        <p id="errorRepetir" class="error hidden">Las contrase√±as no coinciden</p>
      </div>

      <div class="flex items-center">
        <input type="checkbox" id="terminos" class="mr-2">
        <label for="terminos">Acepto los t√©rminos y condiciones</label>
      </div>
      <p id="errorTerminos" class="error hidden">Debes aceptar los t√©rminos</p>

      <button type="submit"
        class="w-full bg-[#333333] text-white py-3 rounded-md hover:bg-[#555555] transition">Registrarme</button>

    </form>
  </div>

  <script>
    let perfil = "";

    document.getElementById("btnArtista").addEventListener("click", () => {
      perfil = "artista";
      document.getElementById("perfil").value = perfil;
      selectPerfil("btnArtista", "btnEmpresa");
    });

    document.getElementById("btnEmpresa").addEventListener("click", () => {
      perfil = "empresa";
      document.getElementById("perfil").value = perfil;
      selectPerfil("btnEmpresa", "btnArtista");
    });

    function selectPerfil(activeId, inactiveId) {
      document.getElementById(activeId).classList.add("bg-[#333333]", "text-white");
      document.getElementById(inactiveId).classList.remove("bg-[#333333]", "text-white");
      document.getElementById(inactiveId).classList.add("bg-[#EEEEEE]", "text-[#333]");
      document.getElementById("errorPerfil").classList.add("hidden");
    }

    function togglePassword(id) {
      const field = document.getElementById(id);
      field.type = field.type === "password" ? "text" : "password";
    }

    document.getElementById("registerForm").addEventListener("submit", function (e) {
      e.preventDefault();

      let valid = true;

      const nombre = document.getElementById("nombre").value.trim();
      const correo = document.getElementById("correo").value.trim();
      const contrasena = document.getElementById("contrasena").value;
      const repetir = document.getElementById("repetirContrasena").value;
      const terminos = document.getElementById("terminos").checked;

      // Validaciones
      if (!perfil) {
        document.getElementById("errorPerfil").classList.remove("hidden");
        valid = false;
      }

      if (!nombre) {
        document.getElementById("errorNombre").classList.remove("hidden");
        valid = false;
      } else {
        document.getElementById("errorNombre").classList.add("hidden");
      }

      if (!correo || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(correo)) {
        document.getElementById("errorCorreo").classList.remove("hidden");
        valid = false;
      } else {
        document.getElementById("errorCorreo").classList.add("hidden");
      }

      if (!contrasena) {
        document.getElementById("errorContrasena").classList.remove("hidden");
        valid = false;
      } else {
        document.getElementById("errorContrasena").classList.add("hidden");
      }

      if (!repetir || repetir !== contrasena) {
        document.getElementById("errorRepetir").classList.remove("hidden");
        valid = false;
      } else {
        document.getElementById("errorRepetir").classList.add("hidden");
      }

      if (!terminos) {
        document.getElementById("errorTerminos").classList.remove("hidden");
        valid = false;
      } else {
        document.getElementById("errorTerminos").classList.add("hidden");
      }

      // Redirecci√≥n
      if (valid) {
        if (perfil === "artista") {
          window.location.href = "/registro/artista";
        } else if (perfil === "empresa") {
          window.location.href = "/registro/empresa";
        }
      }
    });
  </script>
</body>

</html>
